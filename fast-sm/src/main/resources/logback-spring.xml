<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <springProperty scope="context" name="appName" source="server.contextPath"/>
    <property name="logHome" value="/logs/fast"/>
    <!--测试日志的地址/home/hzed-dev/creditaudit/logs/hzed-admin-->

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%trace表示请求标志，%-5level：级别从左显示5个字符宽度，%msg日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{requestId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 按照每天10M生成日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--最新日志文件输出的文件名-->
        <file>${logHome}/${appName}.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logHome}/%d{yyyy-MM-dd}/${appName}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 单文件最大大小 -->
            <maxFileSize>30MB</maxFileSize>
            <!-- 日志文件保存周期 -->
            <maxHistory>30</maxHistory>
            <!-- 日志文件存储内存空间 -->
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <!--格式化输出：%d表示日期，%trace表示请求标志，%-5level：级别从左显示5个字符宽度，%msg日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{requestId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>